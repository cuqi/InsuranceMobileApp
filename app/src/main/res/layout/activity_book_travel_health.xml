<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wsmethods.BookTravelHealth">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:src="@drawable/ss_logo_ins"
            />
        <TextView
            android:id="@+id/textPremium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Премијата изнесува: "
            android:textSize="16dp"
            android:layout_marginStart="60dp"
            />
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            />
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/start_date"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_width="290dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/edit_text_bg"
                android:layout_marginStart="60dp"
                android:hint="Start Date"/>

            <EditText
                android:id="@+id/contractor_first_name"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="60dp"
                />

            <EditText
                android:id="@+id/contractor_last_name"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:hint="Last Name"
                android:layout_marginStart="60dp"
                />

            <EditText
                android:id="@+id/contractor_ssn"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:hint="SSN"
                android:layout_marginStart="60dp"
                />

            <EditText
                android:id="@+id/contractor_address"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Address"
                android:layout_marginStart="60dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/contractor_postal"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:background="@drawable/edit_text_bg"
                    android:ems="10"
                    android:hint="Postal Code"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

                <EditText
                    android:id="@+id/contractor_city"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"

                    android:ems="10"
                    android:hint="City"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is the owner different from the insured?"
                android:checked="false"
                android:background="@drawable/vie_bg"
                android:textSize="18dp"
                android:layout_marginStart="35dp"
                />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                />

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/insured_first_name"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:background="@drawable/edit_text_bg"
                        android:ems="10"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <EditText
                        android:id="@+id/insured_last_name"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:background="@drawable/edit_text_bg"
                        android:ems="10"
                        android:hint="Last Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <EditText
                        android:id="@+id/insured_ssn"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:background="@drawable/edit_text_bg"
                        android:ems="10"
                        android:hint="SSN"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <EditText
                        android:id="@+id/insured_address"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:background="@drawable/edit_text_bg"
                        android:ems="10"
                        android:hint="Address"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/insured_postal"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:background="@drawable/edit_text_bg"
                            android:ems="10"
                            android:hint="Postal Code"
                            android:inputType="textPersonName"
                            android:paddingLeft="20dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp" />

                        <EditText
                            android:id="@+id/insured_city"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_bg"

                            android:ems="10"
                            android:hint="City"
                            android:inputType="textPersonName"
                            android:paddingLeft="20dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp" />
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <Button
                android:id="@+id/createPolicy"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="Create Policy"
                android:background="@drawable/button_bg"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>

    </ScrollView>



</LinearLayout>